.item
	width 100%
	max-width 350px
	display none

	div.blob
		padding 3rem
		height auto
		margin-bottom 4rem
		background #FFF
		border-radius 0 0 10px 10px
		border 1px solid grey-color
		border-top none

		.title
			justify-content space-between
			margin-bottom 10px

			h1
				font-size 2.4rem

			.difficulty
				height 3rem
				width 3rem
				border-radius 50%
				border 2px solid black

				&.easy
					background #73f440

				&.medium
					background #FFFF00

				&.hard
					background #FF0009

		p
			font-size 1.6rem
			line-height 1.4
			color #222

			&.swag
				margin 5px -3px 10px -3px

				span
					background #737373
					color #fff
					border-radius 3px
					margin 0 3px
					padding 2px 5px
					font-size 1.6rem

			&.description
				margin 10px 0

		a.btn
			color primary-color
			font-size 1.8rem
			padding .4rem 2rem
			margin-top 1.2rem
			border-radius .6rem
			border 2px solid primary-color
			text-decoration none
			display inline-block

			&:hover
				background primary-color
				color white-color
				border 2px solid primary-color

	img
		height 100%
		width auto
		transition all 300ms linear

	.img-container
		height 260px
		width 100%
		overflow hidden
		border-radius 10px 10px 0 0
		border 1px solid grey-color
		background white-color

	&:hover
		img
			transform rotate(3deg) scale(1.05)

@require "imports/base"
@require "imports/colors"

.container
	min-height 100vh
	width 100vw
	overflow-x hidden

.hidden
	display none

.box
	width 100%

section.main
	flex-direction column
	margin 0 auto

	.controls
		flex-wrap wrap

		@media screen and (max-width: 450px)
			justify-content left

	.banner
		text-align center
		padding 1.2rem
		background primary-color
		color white

	.hero
		background url('/assets/img/tiny_grid_@2X.png') repeat

		.heading
			flex-direction column
			max-width 90rem
			text-align center
			padding 6rem

			h1
				font-size 3rem
				color #111
				margin-bottom 2rem
			h2
				font-size 2rem
				font-family $default-font-family-mono
				color white-color
				padding .4rem .8rem
				border 2px dashed white-color
				border-radius 6px
				margin-bottom 2rem
			p
				font-size 2rem
				max-width 65rem
				color white-color

	.buttons
		justify-content flex-start
		padding-bottom 15px
		max-width 1150px
		width 100%
		flex-direction column
		align-items flex-start

		.top
			flex-wrap wrap
			width 100%
			justify-content flex-start

		@media screen and (max-width: 450px)
			.item, .select-wrapper, select
				width 100%

		.item
			padding 5px

		.select-wrapper
			position relative
			margin 0 5px

			&:before
				position absolute
				top 50%
				right 10px
				width 0
				height 0
				content ''
				transform rotate(0) translate3d(0, -50%, 0)
				border-width 4px 4px 0
				border-style solid
				border-color #6c7a86 transparent transparent
				pointer-events none

		input
			margin-right 6px

		select
			background #fff
			border none
			border-bottom 2px solid #bbb
			border-radius 0px
			padding 5px 20px 5px 5px
			appearance none
			font-family $default-font-family
			font-size 1.6rem
			cursor pointer

		@import "imports/selectr-theme"

	.content
		max-width 1100px
		flex-wrap wrap
		align-items flex-start
		justify-content space-around
		margin 0 -10px
		margin-top 8px
		width 100%

		@import "imports/card"

footer
	margin 0 auto 70px auto
	flex-wrap wrap
	padding-bottom 15px
	max-width 1150px
	width 100%
	flex-direction row

	.item
		width 100%

@import "imports/a11y"

#content .item.visible
	display initial
